@keyframes circling
  0%
    transform: rotate(0deg)
  to
    transform: rotate(1turn)

[data-type=music] 
  #rightside
    display: none
  #anMusic-page 
    .aplayer
      &.aplayer-withlrc 
        .aplayer-pic
          display: none !important      
        .naokuo-song-wrap
          &.naokuo-ab-song
            display: block !important
        .aplayer-lrc 
          p
            will-change: transform
          .aplayer-lrc-contents
            position: relative
        .aplayer-info 
          .aplayer-music 
            .aplayer-title
              // 歌名超出左右滚动
              float: left
              white-space: nowrap
              animation: nao-text-roll 4s cubic-bezier(.6,0,.5,1) alternate infinite
              min-width: 100%
            .aplayer-author
              float: inline-end
              font-size: 1rem!important
              color: #b9b9b9d1

@keyframes nao-text-roll
  from
    margin: 0
  to
    margin-left: 100%
    transform: translateX(-100%)

// 屏幕像素高大于1024px歌词居中
@media screen and (min-width:768px) and (min-height:1024px)
  [data-type=music] 
    #anMusic-page 
      .aplayer
        &.aplayer-withlrc 
          .aplayer-lrc 
            .aplayer-lrc-contents
              top: 36%

// 屏幕像素高800px到1024px中间歌词居中
@media screen and (max-width:768px) and (max-height: 1024px)
  [data-type=music] 
    #anMusic-page 
      .aplayer
        &.aplayer-withlrc 
          .aplayer-lrc 
            .aplayer-lrc-contents
              top: calc(50vh - 270px)

// 唱片切换动画（加载太快的话效果不好）
[data-type=music] 
  #anMusic-page 
    .naokuo-song-turn
      .naokuo-song-rollwrap
        transform: scale(1)
        transition: 0.2s

    .aplayer-loading
      .naokuo-song-wrap.naokuo-ab-song 
        .naokuo-song-disc
          &:after
            transform: rotate(-37deg)
          .naokuo-song-turn 
            .naokuo-song-rollwrap
              transform: scale(0)

// 手机端点击唱片-歌词显掩
@media screen and (max-width: 768px)
  [data-type=music] 
    #anMusic-page 
      .aplayer
        &.aplayer-withlrc 
          .aplayer-info 
            .aplayer-lrc
              opacity: 0
          .naokuo-song-wrap.naokuo-ab-song
            opacity: 1
            transition: all 0.2s linear
          &.Lyrics_appear
            .aplayer-info 
              position: absolute
              top: -40px
              left: 0
              right: 0
              .aplayer-lrc
                opacity: 1
                transition: all 1s linear
            .naokuo-song-wrap.naokuo-ab-song
              opacity: 0
              position: relative
              z-index: 10
