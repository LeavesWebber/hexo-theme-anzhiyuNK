.naokuo-song-wrap
  padding-top: 63px

  &.naokuo-ab-song 
    display: none
    .naokuo-song-disc
      position: relative
      width: 207px
      height: 207px
      margin: 0 auto
      // 播放拨片
      &:after
        content: " "
        position: absolute   
        width: 66px
        height: 106px
        top: -45px
        left: 90px
        z-index: 5
        transform: rotate(-37deg)
        transition-property: all
        transition-duration: 0.8s
        transform-origin: left top
        // background: url(https://cdn.cbd.int/naokuo-blog@1.2.3/img/heijiao/needle-ab.png) no-repeat
        background: url(https://bu.dusays.com/2024/01/31/65ba324604343.png) no-repeat
        background-size: contain

      // 播放拨片旋转
      &.naokuo-play
        &:after
          transform: rotate(-7deg)  
        .naokuo-song-turn
          .naokuo-song-rollwrap
            .naokuo-song-img
              // 播放信息图片
              &.a-circling
                animation: circling 20s linear infinite

      .naokuo-song-turn
        width: 100%
        height: 100%

        &:before
          content: " "
          position: absolute
          left: 0
          right: 0
          top: 0
          bottom: 0
          z-index: 2
          // background: url(https://cdn.cbd.int/naokuo-blog@1.2.3/img/heijiao/disc_496_496.png) no-repeat
          background: url(https://bu.dusays.com/2024/01/31/65ba3225f020c.png) no-repeat
          background-size: contain

        .naokuo-song-rollwrap
          position: absolute
          width: 150px
          height: 150px
          left: 50%
          top: 50%
          z-index: 1
          margin: -75px 0 0 -75px
          .naokuo-song-img
            width: 100%
            height: 100%
            border-radius: 50%
            overflow: hidden
            // background: url(https://cdn.cbd.int/naokuo-blog@1.2.3/img/heijiao/disc_default.png) no-repeat
            background: url(https://bu.dusays.com/2024/01/31/65ba327f9ced8.png) no-repeat
            background-size: cover
            // 暂停
            &.a-circling
              animation-play-state: paused
              
        .naokuo-song-lgour,
        .naokuo-song-light
          position: absolute
          left: 0
          right: 0
          top: 0
          bottom: 0
          z-index: 3

        .naokuo-song-light
          // background: url(https://cdn.cbd.int/naokuo-blog@1.2.3/img/heijiao/disc_light_496_496.png) no-repeat
          background: url(https://bu.dusays.com/2024/01/31/65ba32a554462.png) no-repeat
          background-size: contain

