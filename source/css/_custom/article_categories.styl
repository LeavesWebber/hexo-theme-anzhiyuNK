// 首页文章分类标签
.article-categories-original
  display: flex
  position: absolute
  top: 0.8rem
  left: 0.8rem
  z-index: 1
  a.article-meta__categories
    margin-right: 0.4rem
    padding: 0 0.7rem
    font-size: 0.9rem
    font-weight: bold
    width: 100%
    height: 100%
    background: var(--anzhiyu-white-op)
    color: var(--anzhiyu-white)
    border-radius: 8px
    backdrop-filter: saturate(180%) blur(20px)
    &:hover 
      background: var(--anzhiyu-theme)
      color: var(--anzhiyu-white)